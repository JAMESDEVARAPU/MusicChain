modules = ["nodejs-20", "web"]
run = "npm install"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm install"]

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Project"
author = 35316949
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MusicChainStream && npm install && npm run dev"

[[workflows.workflow]]
name = "Dev Server"
author = 35316949
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MusicChainStream && npm install && NODE_ENV=development npm run dev"

[[workflows.workflow]]
name = "Development Server"
author = 35316949
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MusicChainStream && npm install && npm run dev"

[[workflows.workflow]]
name = "Production Build"
author = 35316949
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MusicChainStream && npm install && npm run build && npm run start"

[[workflows.workflow]]
name = "Type Check"
author = 35316949
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd MusicChainStream && npm run check"

[[ports]]
localPort = 5000
externalPort = 80
